@model NationalParksProject.Models.User

    <div class="container" style="width: 40%">
        <form method="post" autocomplete="off">
            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" placeholder="username..." class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Password"></label>
                <input type="password" asp-for="Password" placeholder="password.." class="form-control" />
            </div>
            <button class="btn btn-primary btn-lg form-control" type="submit" value="Submit">Log in</button>
        </form>
    </div>
